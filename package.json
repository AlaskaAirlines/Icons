{
  "name": "@alaskaair/orion-icons",
  "version": "0.1.0",
  "description": "Orion Design System icons",
  "main": "dist/",
  "author": "Alaska Design and Research",
  "license": "Apache-2.0",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "jest": "^23.5.0",
    "jsonlint2": "^1.7.1",
    "svglint": "^1.0.2",
    "versiony-cli": "^1.3.0"
  },
  "scripts": {
    "jsonlint": "jsonlint data/orion-icons.json -q -V .jsonlintschema",
    "svglint": "svglint icons/* --ci",
    "newbuild": "node scripts/build.js",
    "test": "jest",
    "clean": "rm dist/icons/*.js dist/index.js dist/*.scss dist/*.json",
    "surv": "python -m SimpleHTTPServer 9001",
    "browser": "open http://localhost:9001/validate/icons.html",
    "icoserve": "concurrently \"npm run surv\" \"npm run browser\"",
    "set-patch": "versiony ./dist/package.json --patch",
    "copyPkg": "copyfiles -f ./src/package.json ./dist",
    "copySass": "copyfiles -f ./src/*.scss ./dist",
    "build": "concurrently \"npm run jsonlint\" \"npm run svglint\" \"npm run copyPkg\" \"npm run copySass\" \"npm run newbuild\" \"npm run test\""
  },
  "dependencies": {
    "copyfiles": "^2.1.0"
  }
}
